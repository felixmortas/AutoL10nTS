{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // üîπ Ajouts pour g√©n√©rer les types
    "declaration": true,          // g√©n√®re les fichiers .d.ts
    "declarationMap": true,       // optionnel, utile pour le debug
    "emitDeclarationOnly": false, // g√©n√®re le JS + .d.ts
    "sourceMap": true             // optionnel, pratique pour debug
  },
  "include": ["src"]
}
